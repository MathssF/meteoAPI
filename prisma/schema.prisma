generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Local {
  id        String   @id @default(uuid())
  name      String   @unique
  lat       Float
  lon       Float
  check     Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  measurements Measurement[]
  alerts       Alert[]
  schedules    Schedule[]
}

model Parameter {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String   @unique
  unit      String
  check     Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  measurements Measurement[]
  alerts       Alert[]
  schedules    Schedule[]
}

model Measurement {
  id            String   @id @default(uuid())
  localId       String
  parameterId   String
  timestamp     DateTime
  value         Float
  batchId       String?
  scheduleId    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  local         Local       @relation(fields: [localId], references: [id])
  parameter     Parameter   @relation(fields: [parameterId], references: [id])
  batch         ForecastBatch? @relation(fields: [batchId], references: [id])
  schedule      Schedule?   @relation(fields: [scheduleId], references: [id])
  triggeredAlerts TriggeredAlert[]

  @@index([localId, timestamp])
  @@index([parameterId, timestamp])
  @@index([batchId])
  @@index([scheduleId])
}

model ForecastBatch {
  id         String   @id @default(uuid())
  runAt      DateTime @default(now())
  source     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  measurements Measurement[]
}

model Alert {
  id          String   @id @default(uuid())
  localId     String
  parameterId String
  condition   String   // Ex: ">", "<=", etc.
  threshold   Float
  message     String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  local       Local     @relation(fields: [localId], references: [id])
  parameter   Parameter @relation(fields: [parameterId], references: [id])
  triggeredAlerts TriggeredAlert[]
}

model Schedule {
  id           String   @id @default(uuid())
  localId      String
  parameterId  String
  time         String   // ex: "12:00", "06:30"
  when         String   // ex: "sun,mon,wed" ou "10,20,30"
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  local        Local     @relation(fields: [localId], references: [id])
  parameter    Parameter @relation(fields: [parameterId], references: [id])
  measurements Measurement[]

  @@index([localId, time])
  @@index([parameterId, when])
}

model TriggeredAlert {
  id              String      @id @default(uuid())
  alertId         String
  measurementId   String
  value           Float
  createdAt       DateTime    @default(now())

  alert           Alert       @relation(fields: [alertId], references: [id])
  measurement     Measurement @relation(fields: [measurementId], references: [id])
}