generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Local {
  id        String   @id @default(uuid())
  name      String   @unique
  lat       Float
  lon       Float
  check     Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Parameter {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String   @unique
  unit      String
  check     Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Measurement {
  id            String   @id @default(uuid())
  localId       String
  parameterId   String
  timestamp     DateTime
  value         Float
  batchId       String?
  scheduleId    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ForecastBatch {
  id         String   @id @default(uuid())
  runAt      DateTime @default(now())
  source     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Alert {
  id          String   @id @default(uuid())
  localId     String
  parameterId String
  condition   String   // Ex: ">", "<=", etc.
  threshold   Float
  message     String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Schedule {
  id           String   @id @default(uuid())
  localId      String
  parameterId  String
  time         String   // ex: "12:00", "06:30"
  when         String   // ex: "sun,mon,wed" ou "10,20,30"
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TriggeredAlert {
  id              String      @id @default(uuid())
  alertId         String
  measurementId   String
  value           Float
  createdAt       DateTime    @default(now())
}